<div class="items">

<% @items.each do |el| %>
  <div class="item">
     <a style="color: black" href="/message/<%= el["id"]%>"><%= el["text"] %></a>
     <br>
    <a href="/message/<%= el["id"]%>/delete">Delete message</a>
    <br>
  </div>
  <br>
<% end %>

</div>

<form method="POST" action="/messages">
  <div class="form-group">
    <input type="text" id="text" name="text" class="form-control">
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">
      Save
    </button>
  </div>
</form>
