<div class="items">
<% @items.each do |el| %>
  <div class="item">
    <%= el["text"] %>
    <br>
    <a href="/comment/<%= el["id_mes"]%>/<%= el["id"]%>/delete">Delete comment</a>
    <br><br>
  </div>
  <br>
<% end %>
<a href="<%= @ms["id"] %>"></a>
</div>
<form method="POST" action="/message">
<a href="<%= @ms["id"] %>"></a>
  <div class="form-group">
    <input type="text" id="text" name="text" class="form-control">
  </div>
  <div class="form-group">
    <input type="hidden" name="ms" value="<%= @ms["id"]%>">
    <button type="submit" class="btn btn-primary">
      Save
    </button>
  </div>
</form>
